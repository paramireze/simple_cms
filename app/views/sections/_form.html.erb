<table summary="Section form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_area(:name, :size => '40x10') %></td>
  </tr>
  <tr>
    <th>Id</th>
    <td><%= f.text_field(:id) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.text_field(:position) %></td>
  </tr>
  <tr>
    <th>Page Id</th>
    <td><%= f.text_field(:page_id) %></td>
  </tr>
  <tr>
    <th>Visibile</th>
    <td><%= f.check_box(:visibile) %></td>
  </tr>
  <tr>
    <th>Content</th>
    <td>
      <%= f.radio_button(:content, 'text') %> Text
      <%= f.radio_button(:content, 'html') %> HTML
    </td>
  </tr>
</table>
