<table summary="Section form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name, :size => '40x10') %></td>
  </tr>
  <tr>
    <th>Id</th>
    <td><%= f.text_field(:id) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.select(:position, 1..@section_count) %></td>
  </tr>
  <tr>
    <th>Page Id</th>
    <td><%= f.select(:page_id, @pages.map {|p| [p.name, p.id]}) %></td>
  </tr>
  <tr>
    <th>Visibile</th>
    <td><%= f.check_box(:visibile) %></td>
  </tr>
  <tr>
    <th>Content</th>
    <td><%= f.text_area(:content, :size => '40x10') %></td>
  </tr>
  <tr>
    <th>Content Type</th>
    <td>
      <%= f.radio_button(:content_type, 'text') %> Text
      <%= f.radio_button(:content_type, 'html') %> HTML
    </td>
  </tr>
</table>
