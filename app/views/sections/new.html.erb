<% @page_title = "New Section" %>

<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>

<div class="sections new">
  <h2>Create Section</h2>

  <%= form_for(@section, :url => sections_path(:page_id => @page.id), :method => 'post') do |f| %>
      <%= render(:partial => 'form', :locals => {:f => f}) %>
      <div class="form-buttons">
        <%= f.submit("Create Section") %>
      </div>
  <% end %>
</div>