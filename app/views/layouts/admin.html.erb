<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS: <%= @page_title || "admin area" %></title>
    <%= stylesheet_link_tag('admin', media: 'all') %>
  </head>
  <body>
  <div id="header">
    <h1>Simple CMS Admin</h1>
  </div>
  <div id="main">
    <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
    <% end %>

    <div id="content">
      <%= yield %>
      <%= link_to("subjects", subjects_path, :class => 'subject list') %>
      <%= link_to("pages", pages_path, :class => 'page list') %>
      <%= link_to("sections", sections_path, :class => 'section list') %>
      <%= link_to("admin_users", admin_users_path, :class => 'admin users list') %>
    </div>
  </div>
  <div id="footer">
    <p id="copyright">&copy; paul ramirez</p>
  </div>

  </body>
</html>