        <div class="notice">
          <%= flash[:notice] %>
        </div>
    <% end %>

    <div id="content">
      <%= yield %>
    </div>
  </div>
  <div id="footer">
    <p id="copyright">&copy; paul ramirez</p>
  </div>

  if (isCongratulatoryEmail()) {

    return getThankYouResponseText()

  } else if (isHashersDrinkingSomewhere()) {

    def nummy = person.find_by_name('numb', 'ass')
    def location = getDrinkingLocation()
    def time = getStartTime()
    nummy.todo(location, time)
    return getAttendanceConfirmationMessage

  } else {
    // todo: need to set default behavior here
  }
  </body>
</html>